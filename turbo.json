{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "format-and-lint": {
      "cache": false
    },
    "format-and-lint:fix": {
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
